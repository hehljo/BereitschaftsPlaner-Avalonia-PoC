<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BereitschaftsPlaner.Avalonia.App"
             xmlns:local="using:BereitschaftsPlaner.Avalonia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <!-- Yunex Traffic Brand Resources -->
    <Application.Resources>
        <!-- Yunex Colors -->
        <SolidColorBrush x:Key="YunexOrange">#F47738</SolidColorBrush>
        <SolidColorBrush x:Key="YunexYellow">#FFE564</SolidColorBrush>
        <SolidColorBrush x:Key="YunexPurple">#A483FF</SolidColorBrush>
        <SolidColorBrush x:Key="YunexRoyalBlue">#1E2ED9</SolidColorBrush>
        <SolidColorBrush x:Key="YunexGreen">#3DCC91</SolidColorBrush>
        <SolidColorBrush x:Key="YunexGray">#6E7278</SolidColorBrush>
        <SolidColorBrush x:Key="YunexSteel">#8C9196</SolidColorBrush>
        <SolidColorBrush x:Key="YunexSky">#69B4FF</SolidColorBrush>
        <SolidColorBrush x:Key="YunexLavender">#C7B8FF</SolidColorBrush>
        <SolidColorBrush x:Key="YunexPistachio">#B8E6D5</SolidColorBrush>

        <!-- Status Colors -->
        <SolidColorBrush x:Key="StatusSuccess">#3DCC91</SolidColorBrush>
        <SolidColorBrush x:Key="StatusWarning">#FFE564</SolidColorBrush>
        <SolidColorBrush x:Key="StatusError">#F47738</SolidColorBrush>
        <SolidColorBrush x:Key="StatusInfo">#69B4FF</SolidColorBrush>

        <!-- Typography -->
        <FontFamily x:Key="HeadlineFont">Segoe UI Semibold, Inter, Arial</FontFamily>
        <FontFamily x:Key="BodyFont">Segoe UI, Inter, Arial</FontFamily>

        <!-- Font Sizes -->
        <x:Double x:Key="FontSizeH1">32</x:Double>
        <x:Double x:Key="FontSizeH2">24</x:Double>
        <x:Double x:Key="FontSizeH3">20</x:Double>
        <x:Double x:Key="FontSizeH4">18</x:Double>
        <x:Double x:Key="FontSizeBody">14</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>

        <!-- Spacing (8pt Grid) -->
        <Thickness x:Key="SpacingXs">4</Thickness>
        <Thickness x:Key="SpacingSm">8</Thickness>
        <Thickness x:Key="SpacingMd">16</Thickness>
        <Thickness x:Key="SpacingLg">24</Thickness>
        <Thickness x:Key="SpacingXl">32</Thickness>

        <!-- Border Radius -->
        <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
        <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
        <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    </Application.Resources>
</Application>
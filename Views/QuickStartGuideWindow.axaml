<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        x:Class="BereitschaftsPlaner.Avalonia.Views.QuickStartGuideWindow"
        x:DataType="vm:QuickStartGuideViewModel"
        Title="Schnellstart-Hilfe"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Schnellstart-Hilfe"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"/>
            <TextBlock Text="Kontextsensitive Hilfe für alle Funktionen"
                       FontSize="14"
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search Box -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,20">
            <TextBox Watermark="Suchen Sie nach Themen, Funktionen oder Problemen..."
                     BorderThickness="0"
                     Background="Transparent"
                     FontSize="14"/>
        </Border>

        <!-- Help Sections -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl ItemsSource="{Binding HelpSections}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="24"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <!-- Section Title -->
                                <TextBlock Text="{Binding Title}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"
                                           Margin="0,0,0,12"/>

                                <!-- Section Content -->
                                <TextBlock Text="{Binding Content}"
                                           FontSize="14"
                                           LineHeight="22"
                                           Foreground="#555555"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer: Close Button -->
        <Border Grid.Row="3"
                Margin="0,15,0,0">
            <Button Content="Schließen"
                    HorizontalAlignment="Right"
                    Background="{StaticResource YunexGreen}"
                    Foreground="White"
                    CornerRadius="8"
                    Padding="30,10"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="BereitschaftsPlaner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Bereitschafts-Planer | Yunex Traffic"
        Width="1100" Height="750"
        FontFamily="{StaticResource BodyFont}"
        FontSize="{StaticResource FontSizeBody}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Margin="10">
        <!-- Tab 1: Ressourcen Import -->
        <TabItem Header="  1. Ressourcen Import  ">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Info Banner -->
                <Border Grid.Row="0"
                        Background="{StaticResource YunexOrange}"
                        Padding="{StaticResource SpacingMd}"
                        CornerRadius="{StaticResource RadiusMedium}"
                        Margin="0,0,0,15"
                        >
                    <TextBlock Text="Bereitschafts-Planer | Yunex Traffic"
                               Foreground="White"
                               FontSize="{StaticResource FontSizeH3}"
                               FontFamily="{StaticResource HeadlineFont}"/>
                </Border>

                <!-- File Selection -->
                <Border Grid.Row="1"
                        BorderBrush="{StaticResource YunexSteel}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusMedium}"
                        Padding="{StaticResource SpacingMd}"
                        Margin="0,0,0,10"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Excel-Datei auswählen:" FontWeight="Bold" Margin="0,0,0,5"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding ExcelFilePath}"
                                     IsReadOnly="True"
                                     Watermark="Keine Datei ausgewählt..."
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="Durchsuchen"
                                    Command="{Binding BrowseFileCommand}"
                                    Width="120"
                                    Background="{StaticResource YunexRoyalBlue}"
                                    Foreground="White"
                                    CornerRadius="{StaticResource RadiusSmall}"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                            <Button Content="Excel importieren"
                                    Command="{Binding ImportExcelCommand}"
                                    Background="{StaticResource YunexGreen}"
                                    Foreground="White"
                                    Width="150"
                                    Height="35"
                                    FontFamily="{StaticResource HeadlineFont}"
                                    CornerRadius="{StaticResource RadiusSmall}"/>

                            <Button Content="JSON speichern"
                                    Command="{Binding SaveJsonCommand}"
                                    Background="{StaticResource YunexPurple}"
                                    Foreground="White"
                                    Width="150"
                                    Height="35"
                                    FontFamily="{StaticResource HeadlineFont}"
                                    CornerRadius="{StaticResource RadiusSmall}"
                                    IsEnabled="{Binding HasData}"/>

                            <TextBlock Text="{Binding StatusMessage}"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding StatusColor}"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <Border Grid.Row="2"
                        BorderBrush="{StaticResource YunexSteel}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusMedium}"
                        Padding="{StaticResource SpacingSm}"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding DataGridTitle}"
                                   FontFamily="{StaticResource HeadlineFont}"
                                   FontSize="{StaticResource FontSizeH4}"
                                   Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Ressourcen}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="All"
                                  BorderThickness="1"
                                  BorderBrush="{StaticResource YunexSteel}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ressourcenname" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Placeholder when no data -->
                        <TextBlock Grid.Row="1"
                                   Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#999999"
                                   FontStyle="Italic"
                                   IsVisible="{Binding !HasData}"/>
                    </Grid>
                </Border>

                <!-- Info Footer -->
                <Border Grid.Row="3"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{StaticResource YunexSteel}"
                        BorderThickness="1"
                        Padding="{StaticResource SpacingSm}"
                        CornerRadius="{StaticResource RadiusSmall}"
                        Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock FontFamily="{StaticResource HeadlineFont}"
                                   FontSize="{StaticResource FontSizeBody}"
                                   Margin="0,0,0,5">
                            <Run Text="Technologie-Stack:"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="{StaticResource FontSizeSmall}">
                            <Run Text="• Avalonia 11.3.10 (Cross-Platform UI)"/>
                            <LineBreak/>
                            <Run Text="• LiteDB 5.0.21 (NoSQL Database)"/>
                            <LineBreak/>
                            <Run Text="• ExcelDataReader (Plattformunabhängig)"/>
                            <LineBreak/>
                            <Run Text="• .NET 9.0 + MVVM Pattern"/>
                            <LineBreak/>
                            <Run Text="• Yunex Traffic Branding" Foreground="{StaticResource YunexOrange}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>

        <!-- Tab 2: Vergleich (Info) -->
        <TabItem Header="  2. Vergleich PowerShell vs Avalonia  ">
            <ScrollViewer>
                <StackPanel Margin="20" Spacing="15">
                    <TextBlock Text="Technologie-Vergleich"
                               FontSize="{StaticResource FontSizeH2}"
                               FontFamily="{StaticResource HeadlineFont}"/>

                    <Border BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Performance" FontWeight="Bold" FontSize="16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Metrik" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="PowerShell" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Avalonia" FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text=".exe Größe"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="~1 MB (.ps1)"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="~50-80 MB" Foreground="{StaticResource YunexOrange}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="RAM Verbrauch"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="100-200 MB"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="80-120 MB" Foreground="{StaticResource YunexGreen}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Startzeit"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="3-5 Sekunden"/>
                                <TextBlock Grid.Row="3" Grid.Column="2" Text="&lt;1 Sekunde" Foreground="{StaticResource YunexGreen}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{StaticResource YunexSteel}" BorderThickness="1" CornerRadius="{StaticResource RadiusMedium}" Padding="{StaticResource SpacingMd}" >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Features" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="✅ Cross-Platform (Windows, macOS, Linux)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="✅ Native Performance (C# compiled)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="✅ Moderne UI (Fluent Design)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="✅ ExcelDataReader (kein COM, plattformunabhängig)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="✅ 100% Kostenlos (MIT Lizenz)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="⚠️  Größere .exe Datei (50-80 MB vs 1 MB)" Foreground="{StaticResource StatusWarning}"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{StaticResource YunexSteel}" BorderThickness="1" CornerRadius="{StaticResource RadiusMedium}" Padding="{StaticResource SpacingMd}" >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Entwicklung" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="• PowerShell → C# Migration: ~60-90 Stunden"/><LineBreak/>
                                <Run Text="• XAML UI (ähnlich WPF)"/><LineBreak/>
                                <Run Text="• MVVM Pattern (Clean Architecture)"/><LineBreak/>
                                <Run Text="• Hot Reload Entwicklung"/><LineBreak/>
                                <Run Text="• Visual Studio / Rider / VS Code"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>

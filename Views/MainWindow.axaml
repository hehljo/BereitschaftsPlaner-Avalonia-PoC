<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="BereitschaftsPlaner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Bereitschafts-Planer | Yunex Traffic"
        Width="1100" Height="750"
        FontFamily="{StaticResource BodyFont}"
        FontSize="{StaticResource FontSizeBody}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>  <!-- Sidebar -->
            <ColumnDefinition Width="*"/>    <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- ============================================================================ -->
        <!-- SIDEBAR NAVIGATION -->
        <!-- ============================================================================ -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarBackground}"
                BorderBrush="{StaticResource YunexLightGray}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Logo/Title -->
                    <RowDefinition Height="*"/>     <!-- Navigation -->
                    <RowDefinition Height="Auto"/>  <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Logo/Title Area -->
                <Border Grid.Row="0"
                        Background="{StaticResource YunexGreen}"
                        Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Bereitschafts-Planer"
                                   FontFamily="{StaticResource HeadlineFont}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Yunex Traffic"
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0" Spacing="4">
                    <!-- Import -->
                    <Button Command="{Binding NavigateToImportCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,12"
                            CornerRadius="0"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexGray}"/>
                            </Style>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource SidebarItemHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexBlue}"/>
                            </Style>
                            <Style Selector="Button[IsPressed=true]">
                                <Setter Property="Background" Value="{StaticResource YunexLightGray}"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="ðŸ“¥" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Import" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Zeitprofile -->
                    <Button Command="{Binding NavigateToZeitprofileCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,12"
                            CornerRadius="0"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexGray}"/>
                            </Style>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource SidebarItemHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexBlue}"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="â°" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Zeitprofile" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Generator -->
                    <Button Command="{Binding NavigateToGeneratorCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,12"
                            CornerRadius="0"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexGray}"/>
                            </Style>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource SidebarItemHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexBlue}"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="âš¡" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Generator" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Editor -->
                    <Button Command="{Binding NavigateToEditorCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="16,12"
                            CornerRadius="0"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Styles>
                            <Style Selector="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexGray}"/>
                            </Style>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{StaticResource SidebarItemHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource YunexBlue}"/>
                            </Style>
                        </Button.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="âœï¸" FontSize="20" VerticalAlignment="Center"/>
                            <TextBlock Text="Editor" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer (Copyright) -->
                <Border Grid.Row="2"
                        Padding="16"
                        BorderBrush="{StaticResource YunexLightGray}"
                        BorderThickness="0,1,0,0">
                    <TextBlock Text="Â© 2025 Johannes Hehl"
                               FontSize="11"
                               Foreground="{StaticResource YunexGray}"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- ============================================================================ -->
        <!-- CONTENT AREA -->
        <!-- ============================================================================ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Top Bar -->
                <RowDefinition Height="*"/>     <!-- View Content -->
            </Grid.RowDefinitions>

            <!-- Top Bar: Dark Mode + Environment Switcher -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{StaticResource YunexSteel}"
                    BorderThickness="0,0,0,1"
                    Padding="{StaticResource SpacingSm}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Empty space for title (can add breadcrumb later) -->
                    <TextBlock Grid.Column="0"
                               Text=""
                               VerticalAlignment="Center"/>

                    <!-- Environment Switcher -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,16,0">
                        <TextBlock Text="Umgebung:"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSizeSmall}"/>
                        <ComboBox SelectedIndex="{Binding EnvironmentIndex}"
                                  MinWidth="120"
                                  FontSize="{StaticResource FontSizeSmall}">
                            <ComboBoxItem Content="Production"/>
                            <ComboBoxItem Content="QA"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Dark Mode Toggle -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸŒ™"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                        <ToggleSwitch IsChecked="{Binding IsDarkMode}"
                                      OffContent="Light"
                                      OnContent="Dark"
                                      FontSize="{StaticResource FontSizeSmall}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- View Content (switches based on SelectedNavIndex) -->
            <Grid Grid.Row="1">
                <!-- ============================================================================ -->
                <!-- VIEW 1: IMPORT (SelectedNavIndex == 0) -->
                <!-- ============================================================================ -->
                <ScrollViewer IsVisible="{Binding SelectedNavIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Info Banner -->
                        <RowDefinition Height="*"/>     <!-- 2-Column Content -->
                        <RowDefinition Height="Auto"/>  <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Info Banner -->
                    <Border Grid.Row="0"
                            Background="{StaticResource YunexOrange}"
                            Padding="{StaticResource SpacingMd}"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Margin="0,0,0,15">
                        <TextBlock Text="Setup: Ressourcen & Bereitschaftsgruppen importieren"
                                   Foreground="White"
                                   FontSize="{StaticResource FontSizeH3}"
                                   FontFamily="{StaticResource HeadlineFont}"/>
                    </Border>

                    <!-- 2-Column Layout: Ressourcen + Gruppen -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>  <!-- Spacer -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Ressourcen -->
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="ðŸ“‹ Ressourcen (Mitarbeiter)"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <!-- File Selection Ressourcen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding ExcelFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportExcelCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>

                                        <Button Content="JSON speichern"
                                                Command="{Binding SaveJsonCommand}"
                                                Background="{StaticResource YunexPurple}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"
                                                IsEnabled="{Binding HasData}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Ressourcen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding DataGridTitle}"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding Ressourcen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ressourcenname" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- RIGHT: Bereitschaftsgruppen -->
                        <StackPanel Grid.Column="2" Spacing="10">
                            <TextBlock Text="ðŸ‘¥ Bereitschaftsgruppen"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexPurple}"/>

                            <!-- File Selection Gruppen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding GruppenFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseGruppenFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportGruppenCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Gruppen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Importierte Bereitschaftsgruppen"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding BereitschaftsGruppen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                            <DataGridTextColumn Header="Verantwortlich" Binding="{Binding VerantwortlichePerson}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasGruppenData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Info Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            Padding="{StaticResource SpacingSm}"
                            CornerRadius="{StaticResource RadiusSmall}"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeBody}"
                                       Margin="0,0,0,5">
                                <Run Text="Technologie-Stack:"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="{StaticResource FontSizeSmall}">
                                <Run Text="â€¢ Avalonia 11.3.10 (Cross-Platform UI)"/>
                                <LineBreak/>
                                <Run Text="â€¢ LiteDB 5.0.21 (NoSQL Database)"/>
                                <LineBreak/>
                                <Run Text="â€¢ ExcelDataReader (PlattformunabhÃ¤ngig)"/>
                                <LineBreak/>
                                <Run Text="â€¢ .NET 9.0 + MVVM Pattern"/>
                                <LineBreak/>
                                <Run Text="â€¢ Yunex Traffic Branding" Foreground="{StaticResource YunexOrange}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>

                <!-- ============================================================================ -->
                <!-- VIEW 2: ZEITPROFILE (SelectedNavIndex == 1) -->
                <!-- ============================================================================ -->
                <ScrollViewer IsVisible="{Binding SelectedNavIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=1}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Info Banner -->
                        <RowDefinition Height="Auto"/>  <!-- Profile Selection -->
                        <RowDefinition Height="Auto"/>  <!-- Profile Name -->
                        <RowDefinition Height="Auto"/>  <!-- Wochenzeitplan -->
                        <RowDefinition Height="Auto"/>  <!-- Feiertage -->
                        <RowDefinition Height="Auto"/>  <!-- Gruppen Zuweisungen -->
                    </Grid.RowDefinitions>

                    <!-- Info Banner -->
                    <Border Grid.Row="0"
                            Background="{StaticResource YunexPurple}"
                            Padding="{StaticResource SpacingMd}"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Margin="0,0,0,15">
                        <TextBlock Text="â° Zeitprofile: Bereitschaftsdienst und Tagesdienst konfigurieren"
                                   Foreground="White"
                                   FontSize="{StaticResource FontSizeH3}"
                                   FontFamily="{StaticResource HeadlineFont}"/>
                    </Border>

                    <!-- Profil-Auswahl & Verwaltung -->
                    <Border Grid.Row="1"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ðŸ“‚ Profil-Verwaltung"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Aktives Profil:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding Zeitprofile}"
                                          SelectedItem="{Binding SelectedZeitprofil}"
                                          DisplayMemberPath="Name"
                                          MinWidth="300"
                                          Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                    <Button Content="ðŸ’¾ Speichern"
                                            Command="{Binding SaveSelectedProfilCommand}"
                                            Background="{StaticResource YunexGreen}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>

                                    <Button Content="ðŸ“‹ Kopieren"
                                            Command="{Binding CopySelectedProfilCommand}"
                                            Background="{StaticResource YunexPurple}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>

                                    <Button Content="ðŸ—‘ï¸ LÃ¶schen"
                                            Command="{Binding DeleteSelectedProfilCommand}"
                                            Background="{StaticResource YunexOrange}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Neues Profil erstellen -->
                            <Separator Background="{StaticResource YunexSteel}" Height="1" Margin="0,5,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Neues Profil:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <TextBox Grid.Column="1"
                                         Text="{Binding NewProfilName}"
                                         Watermark="Name fÃ¼r neues Profil eingeben..."
                                         Margin="0,0,10,0"/>

                                <Button Grid.Column="2"
                                        Content="âž• Erstellen"
                                        Command="{Binding CreateNewProfilCommand}"
                                        Background="{StaticResource YunexRoyalBlue}"
                                        Foreground="White"
                                        Width="120"
                                        Height="32"
                                        CornerRadius="{StaticResource RadiusSmall}"/>
                            </Grid>

                            <!-- Status Message -->
                            <TextBlock Text="{Binding StatusMessage}"
                                       Foreground="{Binding StatusColor}"
                                       FontWeight="Bold"
                                       FontSize="{StaticResource FontSizeSmall}"/>
                        </StackPanel>
                    </Border>

                    <!-- Profil Name (wenn Profil ausgewÃ¤hlt) -->
                    <Border Grid.Row="2"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="âœï¸ Profil-Details"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Profil-Name:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <TextBox Grid.Column="1"
                                         Text="{Binding SelectedZeitprofil.Name}"
                                         Watermark="Profilname"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Wochenzeitplan: BD + TD -->
                    <Border Grid.Row="3"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="15">
                            <TextBlock Text="ðŸ“… Wochenzeitplan"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- LEFT: Bereitschaftstage (BD) -->
                                <StackPanel Grid.Column="0" Spacing="10">
                                    <TextBlock Text="ðŸŒ™ Bereitschaftsdienst (BD)"
                                               FontWeight="Bold"
                                               FontSize="{StaticResource FontSizeBody}"
                                               Foreground="{StaticResource YunexPurple}"/>

                                    <DataGrid ItemsSource="{Binding SelectedZeitprofil.BereitschaftsTage}"
                                              AutoGenerateColumns="False"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}"
                                              Height="220">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Von" Binding="{Binding Von}" Width="80"/>
                                            <DataGridTextColumn Header="Bis" Binding="{Binding Bis}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <TextBlock Text="ðŸ’¡ Standard: Mo-So 16:00-07:30 (Folgetag)"
                                               FontSize="{StaticResource FontSizeSmall}"
                                               Foreground="{StaticResource YunexGray}"
                                               FontStyle="Italic"/>
                                </StackPanel>

                                <!-- RIGHT: Tagesdienste (TD) -->
                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock Text="â˜€ï¸ Tagesdienst (TD)"
                                               FontWeight="Bold"
                                               FontSize="{StaticResource FontSizeBody}"
                                               Foreground="{StaticResource YunexGreen}"/>


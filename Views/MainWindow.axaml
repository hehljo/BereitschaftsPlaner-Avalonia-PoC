<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="BereitschaftsPlaner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Bereitschafts-Planer | Yunex Traffic"
        Width="1100" Height="750"
        FontFamily="{StaticResource BodyFont}"
        FontSize="{StaticResource FontSizeBody}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Top Bar: Dark Mode + Environment Switcher -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{StaticResource YunexSteel}"
                BorderThickness="0,0,0,1"
                Padding="{StaticResource SpacingSm}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Copyright -->
                <TextBlock Grid.Column="0"
                           Text="Â© 2025 Johannes Hehl"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSizeSmall}"
                           Foreground="{StaticResource YunexGray}"/>

                <!-- Environment Switcher -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,16,0">
                    <TextBlock Text="Umgebung:"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSizeSmall}"/>
                    <ComboBox SelectedIndex="{Binding EnvironmentIndex}"
                              MinWidth="120"
                              FontSize="{StaticResource FontSizeSmall}">
                        <ComboBoxItem Content="Production"/>
                        <ComboBoxItem Content="QA"/>
                    </ComboBox>
                </StackPanel>

                <!-- Dark Mode Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸŒ™"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <ToggleSwitch IsChecked="{Binding IsDarkMode}"
                                  OffContent="Light"
                                  OnContent="Dark"
                                  FontSize="{StaticResource FontSizeSmall}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Margin="10" DockPanel.Dock="Top">
        <!-- Tab 1: Setup & Import -->
        <TabItem Header="  1. Setup & Import  ">
            <ScrollViewer>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Info Banner -->
                        <RowDefinition Height="*"/>     <!-- 2-Column Content -->
                        <RowDefinition Height="Auto"/>  <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Info Banner -->
                    <Border Grid.Row="0"
                            Background="{StaticResource YunexOrange}"
                            Padding="{StaticResource SpacingMd}"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Margin="0,0,0,15">
                        <TextBlock Text="Setup: Ressourcen & Bereitschaftsgruppen importieren"
                                   Foreground="White"
                                   FontSize="{StaticResource FontSizeH3}"
                                   FontFamily="{StaticResource HeadlineFont}"/>
                    </Border>

                    <!-- 2-Column Layout: Ressourcen + Gruppen -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>  <!-- Spacer -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Ressourcen -->
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="ðŸ“‹ Ressourcen (Mitarbeiter)"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <!-- File Selection Ressourcen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding ExcelFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportExcelCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>

                                        <Button Content="JSON speichern"
                                                Command="{Binding SaveJsonCommand}"
                                                Background="{StaticResource YunexPurple}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"
                                                IsEnabled="{Binding HasData}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Ressourcen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding DataGridTitle}"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding Ressourcen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ressourcenname" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- RIGHT: Bereitschaftsgruppen -->
                        <StackPanel Grid.Column="2" Spacing="10">
                            <TextBlock Text="ðŸ‘¥ Bereitschaftsgruppen"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexPurple}"/>

                            <!-- File Selection Gruppen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding GruppenFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseGruppenFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportGruppenCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Gruppen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Importierte Bereitschaftsgruppen"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding BereitschaftsGruppen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                            <DataGridTextColumn Header="Verantwortlich" Binding="{Binding VerantwortlichePerson}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasGruppenData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Info Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            Padding="{StaticResource SpacingSm}"
                            CornerRadius="{StaticResource RadiusSmall}"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeBody}"
                                       Margin="0,0,0,5">
                                <Run Text="Technologie-Stack:"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="{StaticResource FontSizeSmall}">
                                <Run Text="â€¢ Avalonia 11.3.10 (Cross-Platform UI)"/>
                                <LineBreak/>
                                <Run Text="â€¢ LiteDB 5.0.21 (NoSQL Database)"/>
                                <LineBreak/>
                                <Run Text="â€¢ ExcelDataReader (PlattformunabhÃ¤ngig)"/>
                                <LineBreak/>
                                <Run Text="â€¢ .NET 9.0 + MVVM Pattern"/>
                                <LineBreak/>
                                <Run Text="â€¢ Yunex Traffic Branding" Foreground="{StaticResource YunexOrange}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Tab 2: Vergleich (Info) -->
        <TabItem Header="  2. Vergleich PowerShell vs Avalonia  ">
            <ScrollViewer>
                <StackPanel Margin="20" Spacing="15">
                    <TextBlock Text="Technologie-Vergleich"
                               FontSize="{StaticResource FontSizeH2}"
                               FontFamily="{StaticResource HeadlineFont}"/>

                    <Border BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Performance" FontWeight="Bold" FontSize="16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Metrik" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="PowerShell" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Avalonia" FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text=".exe GrÃ¶ÃŸe"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="~1 MB (.ps1)"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="~50-80 MB" Foreground="{StaticResource YunexOrange}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="RAM Verbrauch"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="100-200 MB"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="80-120 MB" Foreground="{StaticResource YunexGreen}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Startzeit"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="3-5 Sekunden"/>
                                <TextBlock Grid.Row="3" Grid.Column="2" Text="&lt;1 Sekunde" Foreground="{StaticResource YunexGreen}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{StaticResource YunexSteel}" BorderThickness="1" CornerRadius="{StaticResource RadiusMedium}" Padding="{StaticResource SpacingMd}" >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Features" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="âœ… Cross-Platform (Windows, macOS, Linux)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="âœ… Native Performance (C# compiled)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="âœ… Moderne UI (Fluent Design)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="âœ… ExcelDataReader (kein COM, plattformunabhÃ¤ngig)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="âœ… 100% Kostenlos (MIT Lizenz)" Foreground="{StaticResource YunexGreen}"/><LineBreak/>
                                <Run Text="âš ï¸  GrÃ¶ÃŸere .exe Datei (50-80 MB vs 1 MB)" Foreground="{StaticResource StatusWarning}"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="{StaticResource YunexSteel}" BorderThickness="1" CornerRadius="{StaticResource RadiusMedium}" Padding="{StaticResource SpacingMd}" >
                        <StackPanel Spacing="10">
                            <TextBlock Text="Entwicklung" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="â€¢ PowerShell â†’ C# Migration: ~60-90 Stunden"/><LineBreak/>
                                <Run Text="â€¢ XAML UI (Ã¤hnlich WPF)"/><LineBreak/>
                                <Run Text="â€¢ MVVM Pattern (Clean Architecture)"/><LineBreak/>
                                <Run Text="â€¢ Hot Reload Entwicklung"/><LineBreak/>
                                <Run Text="â€¢ Visual Studio / Rider / VS Code"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
    </DockPanel>
</Window>

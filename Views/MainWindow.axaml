<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="BereitschaftsPlaner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Bereitschafts-Planer (Avalonia PoC)"
        Width="1100" Height="750">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl Margin="10">
        <!-- Tab 1: Ressourcen Import -->
        <TabItem Header="  1. Ressourcen Import  ">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Info Banner -->
                <Border Grid.Row="0" Background="#0078D4" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                    <TextBlock Text="PROOF OF CONCEPT: Excel-Import für Ressourcen"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                </Border>

                <!-- File Selection -->
                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Excel-Datei auswählen:" FontWeight="Bold" Margin="0,0,0,5"/>

                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding ExcelFilePath}"
                                     IsReadOnly="True"
                                     Watermark="Keine Datei ausgewählt..."
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="Durchsuchen"
                                    Command="{Binding BrowseFileCommand}"
                                    Width="120"
                                    Background="#0078D4"
                                    Foreground="White"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                            <Button Content="Excel importieren"
                                    Command="{Binding ImportExcelCommand}"
                                    Background="#107C10"
                                    Foreground="White"
                                    Width="150"
                                    Height="35"
                                    FontWeight="Bold"/>

                            <Button Content="JSON speichern"
                                    Command="{Binding SaveJsonCommand}"
                                    Background="#FF8C00"
                                    Foreground="White"
                                    Width="150"
                                    Height="35"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding HasData}"/>

                            <TextBlock Text="{Binding StatusMessage}"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding StatusColor}"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding DataGridTitle}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Ressourcen}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="All"
                                  BorderThickness="1"
                                  BorderBrush="#CCCCCC">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ressourcenname" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Placeholder when no data -->
                        <TextBlock Grid.Row="1"
                                   Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#999999"
                                   FontStyle="Italic"
                                   IsVisible="{Binding !HasData}"/>
                    </Grid>
                </Border>

                <!-- Info Footer -->
                <Border Grid.Row="3" Background="#F0F0F0" Padding="10" CornerRadius="5" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">
                            <Run Text="PoC Technologien:"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="• Avalonia 11.3.10 (Cross-Platform UI)"/>
                            <LineBreak/>
                            <Run Text="• ExcelDataReader (Plattformunabhängig, kein COM)"/>
                            <LineBreak/>
                            <Run Text="• .NET 8.0 (LTS, kostenlos)"/>
                            <LineBreak/>
                            <Run Text="• MVVM Pattern (Modern Architecture)"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>

        <!-- Tab 2: Vergleich (Info) -->
        <TabItem Header="  2. Vergleich PowerShell vs Avalonia  ">
            <ScrollViewer>
                <StackPanel Margin="20" Spacing="15">
                    <TextBlock Text="Technologie-Vergleich" FontSize="20" FontWeight="Bold"/>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Performance" FontWeight="Bold" FontSize="16"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Metrik" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="PowerShell" FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Avalonia" FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text=".exe Größe"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="~1 MB (.ps1)"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="~50-80 MB" Foreground="#FF8C00"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="RAM Verbrauch"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="100-200 MB"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="80-120 MB" Foreground="Green"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Startzeit"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="3-5 Sekunden"/>
                                <TextBlock Grid.Row="3" Grid.Column="2" Text="&lt;1 Sekunde" Foreground="Green"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Features" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="✅ Cross-Platform (Windows, macOS, Linux)" Foreground="Green"/><LineBreak/>
                                <Run Text="✅ Native Performance (C# compiled)" Foreground="Green"/><LineBreak/>
                                <Run Text="✅ Moderne UI (Fluent Design)" Foreground="Green"/><LineBreak/>
                                <Run Text="✅ ExcelDataReader (kein COM, plattformunabhängig)" Foreground="Green"/><LineBreak/>
                                <Run Text="✅ 100% Kostenlos (MIT Lizenz)" Foreground="Green"/><LineBreak/>
                                <Run Text="⚠️  Größere .exe Datei (50-80 MB vs 1 MB)" Foreground="#FF8C00"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Entwicklung" FontWeight="Bold" FontSize="16"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="• PowerShell → C# Migration: ~60-90 Stunden"/><LineBreak/>
                                <Run Text="• XAML UI (ähnlich WPF)"/><LineBreak/>
                                <Run Text="• MVVM Pattern (Clean Architecture)"/><LineBreak/>
                                <Run Text="• Hot Reload Entwicklung"/><LineBreak/>
                                <Run Text="• Visual Studio / Rider / VS Code"/><LineBreak/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BereitschaftsPlaner.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="BereitschaftsPlaner.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Bereitschafts-Planer | Yunex Traffic"
        Width="1100" Height="750"
        FontFamily="{StaticResource BodyFont}"
        FontSize="{StaticResource FontSizeBody}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Top Bar: Dark Mode + Environment Switcher -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{StaticResource YunexSteel}"
                BorderThickness="0,0,0,1"
                Padding="{StaticResource SpacingSm}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Copyright -->
                <TextBlock Grid.Column="0"
                           Text="Â© 2025 Johannes Hehl"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSizeSmall}"
                           Foreground="{StaticResource YunexGray}"/>

                <!-- Environment Switcher -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,16,0">
                    <TextBlock Text="Umgebung:"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSizeSmall}"/>
                    <ComboBox SelectedIndex="{Binding EnvironmentIndex}"
                              MinWidth="120"
                              FontSize="{StaticResource FontSizeSmall}">
                        <ComboBoxItem Content="Production"/>
                        <ComboBoxItem Content="QA"/>
                    </ComboBox>
                </StackPanel>

                <!-- Dark Mode Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸŒ™"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                    <ToggleSwitch IsChecked="{Binding IsDarkMode}"
                                  OffContent="Light"
                                  OnContent="Dark"
                                  FontSize="{StaticResource FontSizeSmall}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Margin="10" DockPanel.Dock="Top">
        <!-- Tab 1: Setup & Import -->
        <TabItem Header="  1. Setup & Import  ">
            <ScrollViewer>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Info Banner -->
                        <RowDefinition Height="*"/>     <!-- 2-Column Content -->
                        <RowDefinition Height="Auto"/>  <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Info Banner -->
                    <Border Grid.Row="0"
                            Background="{StaticResource YunexOrange}"
                            Padding="{StaticResource SpacingMd}"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Margin="0,0,0,15">
                        <TextBlock Text="Setup: Ressourcen & Bereitschaftsgruppen importieren"
                                   Foreground="White"
                                   FontSize="{StaticResource FontSizeH3}"
                                   FontFamily="{StaticResource HeadlineFont}"/>
                    </Border>

                    <!-- 2-Column Layout: Ressourcen + Gruppen -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>  <!-- Spacer -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Ressourcen -->
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="ðŸ“‹ Ressourcen (Mitarbeiter)"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <!-- File Selection Ressourcen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding ExcelFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportExcelCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>

                                        <Button Content="JSON speichern"
                                                Command="{Binding SaveJsonCommand}"
                                                Background="{StaticResource YunexPurple}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"
                                                IsEnabled="{Binding HasData}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Ressourcen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding DataGridTitle}"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding Ressourcen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Ressourcenname" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- RIGHT: Bereitschaftsgruppen -->
                        <StackPanel Grid.Column="2" Spacing="10">
                            <TextBlock Text="ðŸ‘¥ Bereitschaftsgruppen"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexPurple}"/>

                            <!-- File Selection Gruppen -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingMd}"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Excel-Datei auswÃ¤hlen:" FontWeight="Bold" Margin="0,0,0,5"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding GruppenFilePath}"
                                                 IsReadOnly="True"
                                                 Watermark="Keine Datei ausgewÃ¤hlt..."
                                                 Margin="0,0,10,0"/>

                                        <Button Grid.Column="1"
                                                Content="Durchsuchen"
                                                Command="{Binding BrowseGruppenFileCommand}"
                                                Width="120"
                                                Background="{StaticResource YunexRoyalBlue}"
                                                Foreground="White"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                        <Button Content="Excel importieren"
                                                Command="{Binding ImportGruppenCommand}"
                                                Background="{StaticResource YunexGreen}"
                                                Foreground="White"
                                                Width="150"
                                                Height="35"
                                                FontFamily="{StaticResource HeadlineFont}"
                                                CornerRadius="{StaticResource RadiusSmall}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Gruppen Data Grid -->
                            <Border BorderBrush="{StaticResource YunexSteel}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource RadiusMedium}"
                                    Padding="{StaticResource SpacingSm}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Importierte Bereitschaftsgruppen"
                                               FontFamily="{StaticResource HeadlineFont}"
                                               FontSize="{StaticResource FontSizeH4}"
                                               Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding BereitschaftsGruppen}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Bezirk" Binding="{Binding Bezirk}" Width="*"/>
                                            <DataGridTextColumn Header="Verantwortlich" Binding="{Binding VerantwortlichePerson}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Placeholder when no data -->
                                    <TextBlock Grid.Row="1"
                                               Text="Keine Daten vorhanden. Bitte Excel-Datei importieren."
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="#999999"
                                               FontStyle="Italic"
                                               IsVisible="{Binding !HasGruppenData}"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Info Footer -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            Padding="{StaticResource SpacingSm}"
                            CornerRadius="{StaticResource RadiusSmall}"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeBody}"
                                       Margin="0,0,0,5">
                                <Run Text="Technologie-Stack:"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="{StaticResource FontSizeSmall}">
                                <Run Text="â€¢ Avalonia 11.3.10 (Cross-Platform UI)"/>
                                <LineBreak/>
                                <Run Text="â€¢ LiteDB 5.0.21 (NoSQL Database)"/>
                                <LineBreak/>
                                <Run Text="â€¢ ExcelDataReader (PlattformunabhÃ¤ngig)"/>
                                <LineBreak/>
                                <Run Text="â€¢ .NET 9.0 + MVVM Pattern"/>
                                <LineBreak/>
                                <Run Text="â€¢ Yunex Traffic Branding" Foreground="{StaticResource YunexOrange}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Tab 2: Zeitprofile Management -->
        <TabItem Header="  2. Zeitprofile  ">
            <ScrollViewer>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Info Banner -->
                        <RowDefinition Height="Auto"/>  <!-- Profile Selection -->
                        <RowDefinition Height="Auto"/>  <!-- Profile Name -->
                        <RowDefinition Height="Auto"/>  <!-- Wochenzeitplan -->
                        <RowDefinition Height="Auto"/>  <!-- Feiertage -->
                        <RowDefinition Height="Auto"/>  <!-- Gruppen Zuweisungen -->
                    </Grid.RowDefinitions>

                    <!-- Info Banner -->
                    <Border Grid.Row="0"
                            Background="{StaticResource YunexPurple}"
                            Padding="{StaticResource SpacingMd}"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Margin="0,0,0,15">
                        <TextBlock Text="â° Zeitprofile: Bereitschaftsdienst &amp; Tagesdienst konfigurieren"
                                   Foreground="White"
                                   FontSize="{StaticResource FontSizeH3}"
                                   FontFamily="{StaticResource HeadlineFont}"/>
                    </Border>

                    <!-- Profil-Auswahl & Verwaltung -->
                    <Border Grid.Row="1"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ðŸ“‚ Profil-Verwaltung"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Aktives Profil:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding Zeitprofile}"
                                          SelectedItem="{Binding SelectedZeitprofil}"
                                          DisplayMemberPath="Name"
                                          MinWidth="300"
                                          Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                    <Button Content="ðŸ’¾ Speichern"
                                            Command="{Binding SaveSelectedProfilCommand}"
                                            Background="{StaticResource YunexGreen}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>

                                    <Button Content="ðŸ“‹ Kopieren"
                                            Command="{Binding CopySelectedProfilCommand}"
                                            Background="{StaticResource YunexPurple}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>

                                    <Button Content="ðŸ—‘ï¸ LÃ¶schen"
                                            Command="{Binding DeleteSelectedProfilCommand}"
                                            Background="{StaticResource YunexOrange}"
                                            Foreground="White"
                                            Width="120"
                                            Height="32"
                                            CornerRadius="{StaticResource RadiusSmall}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Neues Profil erstellen -->
                            <Separator Background="{StaticResource YunexSteel}" Height="1" Margin="0,5,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Neues Profil:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <TextBox Grid.Column="1"
                                         Text="{Binding NewProfilName}"
                                         Watermark="Name fÃ¼r neues Profil eingeben..."
                                         Margin="0,0,10,0"/>

                                <Button Grid.Column="2"
                                        Content="âž• Erstellen"
                                        Command="{Binding CreateNewProfilCommand}"
                                        Background="{StaticResource YunexRoyalBlue}"
                                        Foreground="White"
                                        Width="120"
                                        Height="32"
                                        CornerRadius="{StaticResource RadiusSmall}"/>
                            </Grid>

                            <!-- Status Message -->
                            <TextBlock Text="{Binding StatusMessage}"
                                       Foreground="{Binding StatusColor}"
                                       FontWeight="Bold"
                                       FontSize="{StaticResource FontSizeSmall}"/>
                        </StackPanel>
                    </Border>

                    <!-- Profil Name (wenn Profil ausgewÃ¤hlt) -->
                    <Border Grid.Row="2"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="âœï¸ Profil-Details"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Profil-Name:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <TextBox Grid.Column="1"
                                         Text="{Binding SelectedZeitprofil.Name}"
                                         Watermark="Profilname"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Wochenzeitplan: BD + TD -->
                    <Border Grid.Row="3"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="15">
                            <TextBlock Text="ðŸ“… Wochenzeitplan"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- LEFT: Bereitschaftstage (BD) -->
                                <StackPanel Grid.Column="0" Spacing="10">
                                    <TextBlock Text="ðŸŒ™ Bereitschaftsdienst (BD)"
                                               FontWeight="Bold"
                                               FontSize="{StaticResource FontSizeBody}"
                                               Foreground="{StaticResource YunexPurple}"/>

                                    <DataGrid ItemsSource="{Binding SelectedZeitprofil.BereitschaftsTage}"
                                              AutoGenerateColumns="False"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}"
                                              Height="220">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Von" Binding="{Binding Von}" Width="80"/>
                                            <DataGridTextColumn Header="Bis" Binding="{Binding Bis}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <TextBlock Text="ðŸ’¡ Standard: Mo-So 16:00-07:30 (Folgetag)"
                                               FontSize="{StaticResource FontSizeSmall}"
                                               Foreground="{StaticResource YunexGray}"
                                               FontStyle="Italic"/>
                                </StackPanel>

                                <!-- RIGHT: Tagesdienste (TD) -->
                                <StackPanel Grid.Column="2" Spacing="10">
                                    <TextBlock Text="â˜€ï¸ Tagesdienst (TD)"
                                               FontWeight="Bold"
                                               FontSize="{StaticResource FontSizeBody}"
                                               Foreground="{StaticResource YunexGreen}"/>

                                    <DataGrid ItemsSource="{Binding SelectedZeitprofil.Tagesdienste}"
                                              AutoGenerateColumns="False"
                                              GridLinesVisibility="All"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource YunexSteel}"
                                              Height="220">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" Width="*" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Von" Binding="{Binding Von}" Width="80"/>
                                            <DataGridTextColumn Header="Bis" Binding="{Binding Bis}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <TextBlock Text="ðŸ’¡ Standard: Mo-Do 07:30-16:00, Fr 07:30-12:30"
                                               FontSize="{StaticResource FontSizeSmall}"
                                               Foreground="{StaticResource YunexGray}"
                                               FontStyle="Italic"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Feiertags-Konfiguration -->
                    <Border Grid.Row="4"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ðŸŽ‰ Feiertags-Konfiguration"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <!-- Bundesland -->
                                <TextBlock Grid.Column="0"
                                           Text="Bundesland:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                                          SelectedValue="{Binding SelectedZeitprofil.Bundesland}">
                                    <ComboBoxItem Content="BY - Bayern"/>
                                    <ComboBoxItem Content="BW - Baden-WÃ¼rttemberg"/>
                                    <ComboBoxItem Content="BE - Berlin"/>
                                    <ComboBoxItem Content="BB - Brandenburg"/>
                                    <ComboBoxItem Content="HB - Bremen"/>
                                    <ComboBoxItem Content="HH - Hamburg"/>
                                    <ComboBoxItem Content="HE - Hessen"/>
                                    <ComboBoxItem Content="MV - Mecklenburg-Vorpommern"/>
                                    <ComboBoxItem Content="NI - Niedersachsen"/>
                                    <ComboBoxItem Content="NW - Nordrhein-Westfalen"/>
                                    <ComboBoxItem Content="RP - Rheinland-Pfalz"/>
                                    <ComboBoxItem Content="SL - Saarland"/>
                                    <ComboBoxItem Content="SN - Sachsen"/>
                                    <ComboBoxItem Content="ST - Sachsen-Anhalt"/>
                                    <ComboBoxItem Content="SH - Schleswig-Holstein"/>
                                    <ComboBoxItem Content="TH - ThÃ¼ringen"/>
                                </ComboBox>

                                <!-- Region -->
                                <TextBlock Grid.Column="3"
                                           Text="Region:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <TextBox Grid.Column="4"
                                         Text="{Binding SelectedZeitprofil.Region}"
                                         Watermark="z.B. Augsburg (optional)"/>

                                <!-- Behandeln wie -->
                                <TextBlock Grid.Column="6"
                                           Text="Behandeln wie:"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="7"
                                          SelectedValue="{Binding SelectedZeitprofil.BehandelnWie}">
                                    <ComboBoxItem Content="Sonntag"/>
                                    <ComboBoxItem Content="Samstag"/>
                                </ComboBox>
                            </Grid>

                            <TextBlock Text="ðŸ’¡ Feiertage werden automatisch berechnet und wie der gewÃ¤hlte Wochentag behandelt"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource YunexGray}"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Gruppen-Zuweisungen -->
                    <Border Grid.Row="5"
                            BorderBrush="{StaticResource YunexSteel}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{StaticResource SpacingMd}"
                            Margin="0,0,0,10"
                            IsVisible="{Binding SelectedZeitprofil, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="ðŸ‘¥ Zugewiesene Bereitschaftsgruppen"
                                       FontFamily="{StaticResource HeadlineFont}"
                                       FontSize="{StaticResource FontSizeH4}"
                                       Foreground="{StaticResource YunexRoyalBlue}"/>

                            <DataGrid ItemsSource="{Binding SelectedZeitprofil.GruppenZuweisungen}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="All"
                                      BorderThickness="1"
                                      BorderBrush="{StaticResource YunexSteel}"
                                      Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Gruppenname" Binding="{Binding GruppenName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="ðŸ’¡ Gruppenzuweisungen kÃ¶nnen in Tab 3 (Generator) verwaltet werden"
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="{StaticResource YunexGray}"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </TabItem>
    </TabControl>
    </DockPanel>
</Window>
